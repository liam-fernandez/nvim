" system
let mapleader=" "
set nocompatible
set hidden " Allow buffer switching without saving
set noerrorbells
set noswapfile
set nobackup
set splitright
set mouse=a
set encoding=utf-8
set nu
set termguicolors
set scrolloff=10
set signcolumn=yes
highlight SignColumn guibg=NONE ctermbg=NONE
set fillchars=eob:\ 
set noshowmode

" tab & space defaults
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" search
set ignorecase
set smartcase
set incsearch
set hlsearch
